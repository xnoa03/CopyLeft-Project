#include <stdio.h>
#include <string.h>
#include <stdlib.h>


int main() {
    int date  = 0;
    int month = 0;
    int year = 0;
    int line = 0;
    int pass = 0;
    char memo[100];
    char serch[100];
    char buffer[100];
    int count=1;

    FILE* fp;
    


    fp = fopen("data.txt", "r");

    printf("찾을 날짜를 입력하세요(양식:yyyymmdd):");
    scanf("%s", &serch);
    printf("%s에 기록된 스케줄입니다\n", serch);
    while (fgets(buffer, 100, fp))
    {
        line++; //한 줄씩 읽음

        if (strstr(buffer, serch))
        {
            pass++;
            printf("%d.%s",count++, buffer);
        }

    }


    if (pass == 0) {
        printf("등록된 스케줄이 없습니다");
    }






    fclose(fp);
    return 0;


}
