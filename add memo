#include <stdio.h>
int main(){
    int date=0;
    int month=0;
    int year=0;
    char memo[1000000];
    
    FILE *fp;
    fp = fopen("data.txt", "a+");
    printf("스케줄을 추가할 날짜를 입력하세요(양식:dd mm yy)\n:");
    scanf("%d %d %d",&date,&month,&year);
    fprintf(fp, "%d/%d/%d/", date, month, year);
    printf("메모를 입력하세요\n:");
    scanf("%s",&memo);
    fprintf(fp,"%s/",memo);
 
    fclose(fp);
}
